{
  "strict": true,     // strict mode
  "white": false,     // Don't force Douglas Crockford's JavaScript coding style
  "es5": true,        // ECMAScript 5 specific features
  "browser": true,    // browser globals
  "devel": true,      // console, alert..
  "boss": true,       // suppresses warnings about the use of assignments in cases where comparisons are expected
  "evil": true,       // eval can be used, but use it with cautions
  "undef":  true,     // prohibits the use of explicitly undeclared variables
  "latedef": true,    // prohibits use of variable before it's defined
  "indent": 2,        // 2 spaces, no tabs
  "camelcase": true,  // either camelCase style or UPPER_CASE with underscores.
  "bitwise": false,   // no bitwise operators
  "curly": true,      // always put curly braces around blocks
  "eqeqeq": true,     // no == and !=, always === and !==
  "trailing": true,   // no trailing spaces
  "sub": true,        // suppresses warnings about using [] notation when it can be expressed in dot notation: person['name'] vs. person.name
  "debug": true,      // you can still use debugger
  "expr": true,       // allow expression statements as programs
  "maxerr": 20,       // Maximum errors before stopping, know there're lots of errors are frustrating :)

  // Some pre defined globals
  "predef": [
    "YUI",
    "Y"
  ]
}
